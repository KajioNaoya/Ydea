- @youtubers.each do |youtuber|
    div class='container'
        div class='box border rounded m-1 p-1 row d-flex align-items-center'
            div class='col-sm-4 row d-flex align-items-center'
                = image_tag youtuber.icon.url || "/noimage.jpg", class: 'rounded-circle col-3 p-1'
                p class="text-truncate col-9 name-text" = link_to youtuber.name, youtuber_path(youtuber)
            div class='due_and_number col-sm-3 d-flex d-sm-block align-items-center'
                .mr-auto.mr-sm-0 = "投稿: #{youtuber.ideas.count}件"
                = "期限: #{youtuber.due}"
            p class="text-truncate col-sm-5" = youtuber.title 

