- if user_signed_in?
    - if current_user.admin?
        p= link_to  "youtuber編集モード", admin_youtubers_path, class: 'nav-link' 

= search_form_for @q, url: youtubers_path, class: 'mt-5 mb-5 container' do |f|
    .form-group.row
        = f.label :name_cont, 'チャンネル名', class: 'col-md-3 col-form-label mt-2'
        = f.search_field :name_cont, class: 'col-md-8 form-control mt-2'
        = f.submit class: 'btn btn-outline-primary ml-auto mr-auto mt-2' 

.mb-3
    = paginate @youtubers
    = page_entries_info @youtubers

